@model IEnumerable<CarteleraCine.Models.Calificacione>

@{
    ViewData["Title"] = "Index";
}
<div class="container">
<h1>Calificaciones</h1>

<div class="row mt-5 mb-5">
    <div class="col-md-12">
       <p>
    <a class="btn btn-warning" asp-action="Create">Crear</a>
      </p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Puntuacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaCalificacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pelicula)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Puntuacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaCalificacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pelicula.PeliculaId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CalificacionId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CalificacionId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CalificacionId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
</div>
</div>