@model CarteleraCine.Models.Calificacione

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3> Esta seguro de eliminar?</h3>
<div>
    <h4>Calificacione</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Puntuacion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Puntuacion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaCalificacion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaCalificacion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Pelicula)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Pelicula.PeliculaId)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CalificacionId" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> 
        <br />
        <a class="btn btn-dark" asp-action="Index">Regresar</a>
    </form>
    <hr />
</div>
