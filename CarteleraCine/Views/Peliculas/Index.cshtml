@model IEnumerable<CarteleraCine.Models.Pelicula>

@{
    ViewData["Title"] = "Inicio Peliculas";
}

<div class="container">

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }
    <div class="row mt-5 mb-5">
        <div class="col-md-12">
            <p>
                <a class="btn btn-warning" asp-action="Create">Crear Pelicula</a>
            </p>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Titulo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Sinopsis)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Director)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Genero)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Clasificacion)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Duracion)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TipoButacas)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Poster) <!-- Cambiado a PosterUrl -->
                        </th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Titulo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Sinopsis)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Director)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Genero)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Clasificacion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Duracion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TipoButacas)
                            </td>
                            <td>
                                @if (item.Poster != null)
                                {
                                    <img src="@item.Poster" alt="Póster" style="width:100px; height:auto;" />
                                }
                            </td>
                            <td>
                                <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.PeliculaId">Editar</a>
                                <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.PeliculaId">Detalles</a>
                                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.PeliculaId">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>