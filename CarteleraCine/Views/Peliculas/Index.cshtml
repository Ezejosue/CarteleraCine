@model IEnumerable<CarteleraCine.Models.Pelicula>

@{
    ViewData["Title"] = "Inicio Peliculas";
}
<div class="container">
     <div class="row mt-5 mb-5">
         <div class="col-md-12">

            <p>
                <a class="btn btn-success" asp-action="Create">Crear Producto</a>
            </p>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Titulo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Sinopsis)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Director)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Genero)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Clasificacion)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Duracion)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TipoButacas)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Poster)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Titulo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Sinopsis)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Director)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Genero)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Clasificacion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Duracion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TipoButacas)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Poster)
                            </td>
                            <td>
                                <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.PeliculaId">Edit</a>
                                <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.PeliculaId">Details</a>
                                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.PeliculaId">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
     </div>
</div>