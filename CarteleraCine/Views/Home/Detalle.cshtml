@model CarteleraCine.Models.Pelicula

@{
    ViewData["Title"] = "Detalle";
}

<div class="container pb-5">

    <div class="row pt-2 gx-4">
        <div class="col-md-3" style="background: white;padding: 5px;border-radius: 10px;">
            <div class="card">
                <img src="@Model.Poster" class="card-img-top" alt="...">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <h6 class="text-uppercase text-danger" style="font-weight: bold;">@Model.Titulo</h6>
                        <p class="card-text" style="font-family: initial;font-weight: initial;">@Model.Genero</p>
                    </li>
                    <li class="list-group-item">
                        <h6 class="text-uppercase text-danger" style="font-weight: bold;">Directores</h6>
                        <p class="card-text" style="font-family: initial;font-weight: initial;">@Model.Director</p>
                    </li>
                    <li class="list-group-item">
                        <h6 class="text-uppercase text-danger" style="font-weight: bold;">Butacas</h6>
                        <p class="card-text" style="font-family: initial;font-weight: initial;">@Model.TipoButacas</p>
                    </li>
                    <li class="list-group-item">
                        <h6 class="text-uppercase text-danger" style="font-weight: bold;">Clasificacion</h6>
                        <p class="card-text" style="font-family: initial;font-weight: initial;">@Model.Clasificacion</p>
                    </li>
                    <li class="list-group-item">
                        <h6 class="text-uppercase text-danger" style="font-weight: bold;">SINOPSIS</h6>
                        <p class="card-text" style="font-family: initial;font-weight: initial;">@Model.Sinopsis</p>
                    </li>
                </ul>
            </div>
        </div>

        <div class="col-md-9" style="background: white;padding: 5px 40px;border-radius: 10px;">
            <h1 class="card-title mb-2">@Model.Titulo</h1>
            <p class="card-text mb-4">
                <span class="badge bg-secondary font-monospace">@Model.Clasificacion</span>
                <span class="badge bg-secondary font-monospace">@Model.Duracion min.</span>
            </p>
            <nav>
                <div class="nav nav-tabs" id="nav-tab" role="tablist">
                    <button class="nav-link active" id="nav-home-tab" data-bs-toggle="tab" data-bs-target="#nav-home" type="button" role="tab" aria-controls="nav-home" aria-selected="true">
                        <span class="text-danger">JUE.</span> <br>
                        <span class="fw-lighter text-dark">14 ABR 2023</span>
                    </button>
                    <button class="nav-link" id="nav-profile-tab" data-bs-toggle="tab" data-bs-target="#nav-profile" type="button" role="tab" aria-controls="nav-profile" aria-selected="false">
                        <span class="text-danger">VIE.</span> <br>
                        <span class="fw-lighter text-dark">15 ABR 2023</span>
                    </button>
                    <button class="nav-link" id="nav-contact-tab" data-bs-toggle="tab" data-bs-target="#nav-contact" type="button" role="tab" aria-controls="nav-contact" aria-selected="false">
                        <span class="text-danger">SAB.</span> <br>
                        <span class="fw-lighter text-dark">16 ABR 2023</span>
                    </button>
                </div>
            </nav>
            <div class="tab-content" id="nav-tabContent">
                <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                    <p>
                        <blockquote class="blockquote mb-0">
                            <p class="text-dark">Sucursal</p>
                            <footer class="blockquote-footer text-dark">Dirección de la sucursal</footer>
                        </blockquote>
                    </p>

                    <div class="card mt-3">
                        <h5 class="card-header">
                            <span class="badge bg-secondary">2D</span>
                            <span class="badge bg-secondary">SUB.</span> |
                            <small>Sillas: <b>Tradicionales</b></small>
                        </h5>
                        <div class="card-body">
                            <button type="button" class="btn btn-outline-danger">11:10</button>
                            <button type="button" class="btn btn-outline-danger">15:00</button>
                            <button type="button" class="btn btn-outline-danger">19:20</button>
                        </div>
                    </div>

                    <div class="card mt-3">
                        <h5 class="card-header">
                            <span class="badge bg-secondary">2D</span>
                            <span class="badge bg-secondary">3D</span>
                            <span class="badge bg-secondary">DOB.</span> |
                            <small>Sillas: <b>Butaca 3D</b></small>
                        </h5>
                        <div class="card-body">
                            <button type="button" class="btn btn-outline-danger">11:30</button>
                            <button type="button" class="btn btn-outline-danger">15:40</button>
                            <button type="button" class="btn btn-outline-danger">20:10</button>
                        </div>
                    </div>

                </div>
                <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
                    <p>
                        <blockquote class="blockquote mb-0">
                            <p class="text-dark">Sucursal 1</p>
                            <footer class="blockquote-footer text-dark">Dirección de la sucursal 1</footer>
                        </blockquote>
                    </p>

                    <div class="card mt-3">
                        <h5 class="card-header">
                            <span class="badge bg-secondary">2D</span>
                            <span class="badge bg-secondary">SUB.</span> |
                            <small>Sillas: <b>Tradicionales</b></small>
                        </h5>
                        <div class="card-body">
                            <button type="button" class="btn btn-outline-danger">12:10</button>
                            <button type="button" class="btn btn-outline-danger">15:20</button>
                        </div>
                    </div>

                    <div class="card mt-3">
                        <h5 class="card-header">
                            <span class="badge bg-secondary">2D</span>
                            <span class="badge bg-secondary">3D</span>
                            <span class="badge bg-secondary">DOB.</span> |
                            <small>Sillas: <b>Butaca 3D</b></small>
                        </h5>
                        <div class="card-body">
                            <button type="button" class="btn btn-outline-danger">10:30</button>
                            <button type="button" class="btn btn-outline-danger">13:00</button>
                            <button type="button" class="btn btn-outline-danger">17:00</button>
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab">
                    <p>
                        <blockquote class="blockquote mb-0">
                            <p class="text-dark">Sucursal 2</p>
                            <footer class="blockquote-footer text-dark">Dirección de la sucursal 2</footer>
                        </blockquote>
                    </p>

                    <div class="card mt-3">
                        <h5 class="card-header">
                            <span class="badge bg-secondary">2D</span>
                            <span class="badge bg-secondary">SUB.</span> |
                            <small>Sillas: <b>Tradicionales</b></small>
                        </h5>
                        <div class="card-body">
                            <button type="button" class="btn btn-outline-danger">11:10</button>
                            <button type="button" class="btn btn-outline-danger">17:10</button>
                        </div>
                    </div>

                    <div class="card mt-3">
                        <h5 class="card-header">
                            <span class="badge bg-secondary">2D</span>
                            <span class="badge bg-secondary">3D</span>
                            <span class="badge bg-secondary">DOB.</span> |
                            <small>Sillas: <b>Butaca 3D</b></small>
                        </h5>
                        <div class="card-body">
                            <button type="button" class="btn btn-outline-danger">11:10</button>
                            <button type="button" class="btn btn-outline-danger">12:50</button>
                            <button type="button" class="btn btn-outline-danger">15:00</button>
                            <button type="button" class="btn btn-outline-danger">17:10</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">MARIO BROS</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" style="padding: 0px 0px !important;">
                <iframe width="100%" height="315" src="https://www.youtube.com/embed/DmCZoiCp5C0" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Salir</button>
            </div>
        </div>
    </div>
</div>
