<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - CarteleraCine</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="~/assets/images/favicon.png">
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/css/custom.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" />
</head>
<body>
    <!-- header -->
    <header class="p-3 text-bg-dark">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                <a href="index.html" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-white">
                    <img src="~/assets/images/favicon.png" class="logo-cine" alt="Logo">
                </a>
                <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0 ">
                    <li><a asp-controller="Home" asp-action="Index" class="nav-link px-2 text-white">Inicio</a></li>
                    <li class="nav-item dropdown">
                        <a class="nav-link text-white dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Administración
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" asp-controller="Peliculas" asp-action="Index">Peliculas</a></li>
                            <li><a class="dropdown-item" asp-controller="Calificaciones" asp-action="Index">Calificaciones</a></li>
                            <li><a class="dropdown-item" asp-controller="Funciones" asp-action="Index">Funciones</a></li>
                            <li><a class="dropdown-item" asp-controller="Salas" asp-action="Index">Salas</a></li>
                        </ul>
                    </li>
                </ul>

            </div>
        </div>
    </header>
    <!-- end header -->
    @RenderBody()
      

    <footer class="bg-dark">
        <div class="container pt-5">
            <div class="row">
                <div class="col-xl-3 col-lg-4 col-md-6">
                    <div>
                        <img src="assets/images/favicon.png" class="logo-cine" alt="Logo">
                        <p class="mb-30 footer-desc">PeliDigital es un servicio de streaming OTT de peliculas y series gestionado por Estudiantes de UBD. "Te ofrece grandes opciones de entretenimiento para toda la Familia y Amigos"</p>
                    </div>
                </div>
                <div class="col-xl-2 offset-xl-1 col-lg-2 col-md-6">
                    <div class="">
                        <h4 class="text-white">Redes</h4>
                        <ul class="list-unstyled">
                            <li>
                                <a href="#" class="fa fa-twitter">Twitter</a><br>
                            </li>
                            <li>
                                <a href="#" class="fa fa-instagram">Instagram</a><br>
                            </li>
                            <li>
                                <a href="#" class="fa fa-facebook">Facebook</a><br>
                            </li>
                            <li>
                                <a href="#" class="fa fa-whatsapp">Whatsapp</a><br>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-xl-3 col-lg-3 col-md-6">
                    <div>
                        <h4 class="text-white">Encontraras</h4>
                        <ul class="list-unstyled">
                            <li>
                                <a href="" class="text-white">Peliculas</a>
                            </li>
                            <li>
                                <a href="" class="text-white">Series</a>
                            </li>
                            <li>
                                <a href="" class="text-white">Terror</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-xl-3 col-lg-3 col-md-6">
                    <div>
                        <h4 class="text-white">PeliDigital</h4>
                        <ul class="list-unstyled">
                            <li>
                                <p>¿Preguntas? Llama al +503 2268-3709</p>
                            </li>
                            <li>
                                <p>
                                    <a href="#">PeliDigital2023DB@gmail.com</a>
                                </p>
                            </li>
                            <li>
                                <p>
                                    <a href="#"></a>TODOS LOS DERECHOS SON RESERVADOS</a>

                                </p>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-center">

                <div class="copyright">
                    <p>Somos lo mejor de lo <a href="#" target="_blank">mejor</a></p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
